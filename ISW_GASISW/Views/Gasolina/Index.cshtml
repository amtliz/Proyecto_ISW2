@model ISW_GASISW.Models.M_PeticionArduino
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Venta de Combustible
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="container">
                <fieldset>
                    <div class="row">
                        <div class="col-lg-12">
                            @ViewBag.Mensaje
                        </div>
                        <div class="col-lg-5">
                            <div class="panel panel-info">
                                <div class="panel-body">
                                    <div class="col-lg-12">
                                        <label for="estacion" class="control-label">Estacion</label>
                                        @Html.DropDownListFor(m=>m.estacion, (IEnumerable<SelectListItem>)ViewBag.Estaciones, new { @class = "dropdown" })
                                    </div>
                                    <div class="col-lg-12">
                                        <label for="tipo" class="control-label">Tipo de Combustible</label>
                                        @Html.DropDownListFor(m => m.tipo, (IEnumerable<SelectListItem>)ViewBag.TiposGas, new { @class = "dropdown" })
                                    </div>
                                    <div class="col-lg-12">
                                        <label for="cantidad" class="control-label">Cantidad de Combustible</label>
                                        @Html.TextBoxFor(m=>m.giro)
                                    </div>
                                    <div class="col-lg-12">
                                        <input type="submit" class="btn btn-primary" value="Aceptar" />
                                    </div>
                                </div>
                            </div> 
                        </div>
                        <div class="col-lg-5 col-lg-offset-1">
                            <div class="panel panel-warning">
                                <div class="panel-heading">
                                    <div class="panel-title">
                                        Combustible Disponible
                                    </div>
                                </div>
                                <div class="panel-body">
                                    <div class="col-lg-12">
                                        <div class="alert alert-warning">
                                            <h4>Estacion 1</h4>
                                            @foreach (var item in ViewBag.Estacion1)
                                            {
                                                if (item.tipo == 1)
                                                {
                                                    <p>Combustible disponible de Regular @item.cantidad galones</p>
                                                }
                                                if (item.tipo == 2)
                                                {
                                                    <p>Combustible disponible de Disel @item.cantidad galones</p>
                                                }
                                            }                                            
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="alert alert-warning">
                                            <h4>Estacion 2</h4>
                                            @foreach (var item in ViewBag.Estacion2)
                                            {
                                                if (item.tipo == 1)
                                                {
                                                    <p>Combustible disponible de Regular @item.cantidad galones</p>
                                                }
                                                if (item.tipo == 2)
                                                {
                                                    <p>Combustible disponible de Disel @item.cantidad galones</p>
                                                }
                                            } 
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        }
    </div>
</div>
