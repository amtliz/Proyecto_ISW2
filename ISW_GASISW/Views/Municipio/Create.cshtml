@model ISW_GASISW.Models.municipio

@{
    ViewBag.Title = "Crear - Municipio";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Crear - Municipio
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="container">
                <fieldset>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            Nombre del Municipio
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.nombre, new { @Placeholder = "hola" })
                            @Html.ValidationMessageFor(model => model.nombre)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            Departamento al que pertenece
                        </div>
                        <div class="editor-field">
                            @Html.DropDownList("DEPARTAMENTO_id", String.Empty)
                            @Html.ValidationMessageFor(model => model.DEPARTAMENTO_id)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            <input type="submit" class="btn btn-primary" value="Crear" />
                            <div class="btn btn-default">
                                @Html.ActionLink("Regresar", "Index")
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
